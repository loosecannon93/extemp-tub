<%content_for :title do %>
<%= @article.title %>
<%end%>
<p>
  <b>Site:</b>
  <%=h @article.site %>
</p>
<p>
  <b>DocID:</b>
  <%=h @article.docid %>
</p>

<p>
  <b>Title:</b>
  <%=h @article.title %>
</p>

<p>
  <b>Abstract:</b>
  <%=h @article.abstract %>
</p>

<p>
  <b>Full text:</b>
  <%= @article.full_text %>
</p>

<p>
  <b>Published:</b>
  <%=h @article.published %>
</p>

<p>
  <b>Url:</b>
  <%=h @article.url %>
</p>

<p>
  <h4>Location:</h4>
  Place: <%=h @article.placename %><br/>
Country: <%=h @article.country %><br/>
ZIP:   <%=h @article.zip %><br/>
Lat:  <%=h @article.latitude %><br/>
Long:  <%=h @article.longitude %><br/>
</p>
<p> 
<b> Tags </b>
<%=h @article.locations.join ', ' %> ,
<%=h @article.topics.join ', ' %>
</p>
<p> 
<h4>Related Locations: </h4>
<% @article.find_related_locations()[0,4].each do |art| %>
<%= link_to art.title, art %><br/>
<%end%>
<h4>Related Topics: </h4>
<% @article.find_related_topics()[0,6].each do |art| %>
<%= link_to art.title, art %><br/>
<%end%>
</p>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
<%= link_to 'Destroy', @article, :confirm => 'Are you sure?', :method => :delete %>
